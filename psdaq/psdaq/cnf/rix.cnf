 { host: 'drp-neh-cmp015', id:'andor_vls_0', flags:'spu', env:andor_epics_env, cmd:pva_cmd0+' -l 0x1 RIX:VLS:CAM:01:IMAGE1:Pva:Image -k pebbleBufSize=2098216'},

 # make transition buffer size large to accomodate a non-timestamped camera
