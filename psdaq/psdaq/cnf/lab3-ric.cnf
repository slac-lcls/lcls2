for e in hsds:
    procmgr_config.append({ host: e[node], id:'hsdioc_%s'%e[bus], flags:'', env:epics_env, cmd:f'hsd134PVs -P {e[pv]} -d /dev/pcie_adc_%s'%e[bus]})
