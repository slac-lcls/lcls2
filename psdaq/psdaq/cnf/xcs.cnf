platform = '0'
username = 'lcls2'

epics_host = 'daq-xcs-xtpg'

conda_rel = 'ps-2.0.3'
epics_env = 'EPICS_PVA_ADDR_LIST=172.21.151.255'

shelf = '0'
ip_addr = '10.0.'+shelf

# procmgr FLAGS: <port number> static port number to keep executable
#                              running across multiple start/stop commands.
#                "X" open xterm
#                "s" send signal to child when stopping
#
# HOST       UNIQUEID      FLAGS  COMMAND+ARGS
# list of processes to run
#   required fields: id, cmd
#   optional fields: host, port, flags, conda, env, rtprio
#     flags:
#        'x' or 'X'  -> xterm: open small or large xterm for process console
#        's'         -> stop: sends ctrl-c to process
#        'u'         -> uniqueid: use 'id' as detector alias (supported by acq, cam, camedt, evr, and simcam)

procmgr_config = [
 { host: epics_host,  id:'modcas' , port:'29451', flags:'s', conda:conda_rel, env:epics_env, cmd:'modcas -P DAQ:XCS:XPM:'+shelf},
 {                    id:'modca'  ,               flags:'s', conda:conda_rel, env:epics_env, cmd:'modca -x DAQ:XCS:XPM:'+shelf},
 {                    id:'xpmioc' , port:'29452', flags:'s', conda:conda_rel, env:epics_env, cmd:'xpmPVs -a '+ip_addr+'.102 -P DAQ:XCS'},

 { host: epics_host,  id:'partcas', port:'29450', flags:'s', conda:conda_rel, env:epics_env, cmd:'partcas -P DAQ:XCS'},
 {                    id:'partca' ,               flags:'s', conda:conda_rel, env:epics_env, cmd:'partca -x DAQ:XCS:PART:0'},

 { host: epics_host,  id:'tprcas' , port:'29453', flags:'s', conda:conda_rel, env:epics_env, cmd:'tprcas -P DAQ:XCS:TPR'},
 {                    id:'tprca'  ,               flags:'s', conda:conda_rel, env:epics_env, cmd:'tprca DAQ:XCS:TPR'},
 {                    id:'tprioc' , port:'29454', flags:'s', conda:conda_rel, env:epics_env, cmd:'tprioc -r a -n DAQ:XCS:TPR'},

## procstat
 {                    id:'procstat', flags:'p', conda:conda_rel, cmd:'procstat -t '+username+' -e0 -n none p'+platform+'.cnf.last'},
  ]
